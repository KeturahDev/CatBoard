@model CatBoardInterface.Models.Post

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Add Post</h1>
    view bag = @ViewBag.boardId
    @using (Html.BeginForm("Create", "Posts"))
    {
      <input type="hidden" name="boardId" value="@ViewBag.boardId">
      <div class="form-group">
        <p>Post Title</p>
        @Html.TextBoxFor(model => model.Title, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Post Body</p>
        @Html.TextBoxFor(model => model.Body, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Image</p>
        @Html.TextBoxFor(model => model.ImageSource, new {@class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Post </button>
    }
  </div>
</div>